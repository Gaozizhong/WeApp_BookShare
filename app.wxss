/**app.wxss**/
@import 'components/wux.wxss';
@import 'assets/styles/weui.wxss';
@import 'assets/styles/skyvow.wxss';
page {
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

/**图书列表**/

.book-list {
    margin-top: 10px;
    width: 100%;
    padding: 4rpx 0;
    margin: 0 auto;
}

.book-tmp {
    padding: 2rpx 0 2rpx 0;
    background: #fff;
    margin-bottom: 4rpx;
    height: 240rpx;
}

.book-image {
    width: 25%;
    height: 240rpx;
    float: left;
}

.book-info {
    width: 75%;
    float: right;
    height: 100%;
    text-align: center;
}

.book-name {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    margin-top: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}

.book-author {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}

.book-author .left {
    margin-left: 10px;
    float: left;
    width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-author .right {
    float: right;
    margin-right: 10px;
    width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/*首页*/

/* 借出申请 */

.book-apply-name {
    height: 33%;
    line-height: 60rpx;
    display: block !important;
    margin-top: 5px;
    margin-left: 10px;
    font-size: 12px;
}

.book-applier {
    height: 30%;
    line-height: 60rpx;
    display: block !important;
    margin-left: 10px;
    font-size: 12px;
}

.book-applier .left {
    float: left;
    width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-applier .right {
    float: right;
}

.operate-box {
    height: 25%;
    margin: 2.5% 0 2.5% 0;
}

.operate-box button {
    color: #fff;
    text-align: center;
    width: 80px;
    height: 30px;
    border-radius: 5px;
    line-height: 30px;
    font-size: 12px;
}

.operate-box .refuse {
    background: red;
    float: left;
    margin-left: 10px;
}

.operate-box .agree {
    background: #3abe20;
    float: right;
    margin-right: 10px;
}

.seal {
    top: 0px;
    right: 0px;
    position: absolute;
}

.seal image {
    width: 60px;
    height: 60px;
}

