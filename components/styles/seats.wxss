.seats-cell {
	position: relative;
	color: #182C4E;
	height: 15px;
	width: 15px;
	line-height: 15px;
	margin: 2px;
	text-align: center;
	outline: none;
	font-size: 12px;
}

.seats-icon {
	display: inline-block;
	width: 15px;
    height: 15px;
    vertical-align: middle;
	background: url("data:image/png;base64,") no-repeat;
    background-size: 15px 75px;
}

.seats-space {
	background: transparent;
}

.seats-checkbox {
	position: absolute;
	display: block;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	opacity: 0;
}

.seats-seat {
	color: #fff;
	cursor: pointer;
}

.seats-icon.available {
	background-position: 0 0;
}

.seats-icon.selected {
	background-position: 0 -20px;
}

.seats-icon.unavailable {
	background-position: 0 -40px;
}

.seats-icon.double {
	background-position: 0 -60px;
}

.seats-container {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background: #eee;
    overflow: hidden;
}

.seats-body {
    display: flex;
	padding: 20px 0;
	flex-direction: column;
	justify-content: center;
}

.seats-row {
    display: block;
    margin: 0 auto;
    text-align: center;
    white-space: nowrap;
}