/**图书列表**/
.book-list {
    margin-top: 80px;
    width: 94%;
    padding: 2px 2px;
}

.book-tmp {
    padding: 2rpx 15rpx 2rpx 15rpx;
    background: #fff;
    margin-bottom: 15rpx;
    height: 220rpx;
    border-radius: 5px;
}

.book-image {
    width: 25%;
    height: 220rpx;
    float: left;
}

.book-info {
    width: 75%;
    float: right;
    height: 100%;
    text-align: center;
}

.book-name {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    margin-top: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.book-author {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}

.book-applier .left {
    margin-left: 10px;
    float: left;
    width: 80px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.book-applier .right {
    float: right;
    margin-right: 10px;
    width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 图书列表样式结束 */