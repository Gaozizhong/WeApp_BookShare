<loading hidden="{{ !loading }}">加载中...</loading>
<view style="width:98%;margin:10px 1%">
    <view class="page-section">
      <view class="page-body-info">

        <block wx:if="{{pictureFiles}}">
          <image src="{{pictureFiles}}" class="image" mode="aspectFit"  bindtap="pictureView" bindlongtap="changePicture" ></image>
        </block>

        <block wx:else>
          <view class="image-plus image-plus-nb" bindtap="chooseImage">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text">选择图片</view>
        </block>

      </view>
    </view>
    <view class="name item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>姓名</text>
        <input class="value-right" type="text" bindinput="setName" value="{{userInfo.userName?userInfo.userName:''}}" placeholder="请输入真实姓名" />
    </view>
    <view class="h1"></view>
    <view class="school item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>学校</text>
        <picker bindchange="bindPickerSchoolChange" class="value-right" value="{{schoolIndex}}" range="{{school}}">
            <view class="picker">
                {{school[schoolIndex]}}
            </view>
        </picker>
    </view>
    <view class="h1"></view>
    <view class="major item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>专业</text>
        <!-- <picker bindchange="bindPickerMajorChange" class="value-right" value="{{majorIndex}}" range="{{major}}">
            <view class="picker">
                {{major[majorIndex]}}
            </view>
        </picker> -->
        <input class="value-right" type="text" bindinput="setMajor" value="{{userInfo.userClass?userInfo.userClass:''}}" placeholder="请输入所在学院" />
    </view>
    <view class="h1"></view>
    <view class="phone item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>联系方式</text>
        <input class="value-right" type="text" bindinput="setPhone" value="{{userInfo.phoneNumber?userInfo.phoneNumber:''}}" placeholder="请输入联系方式" />
    </view>
    <view class="h1"></view>
    <view class="status item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>学号</text>
        <input class="value-right" type="text" bindinput="setCardId" value="{{userInfo.studentCard?userInfo.studentCard:''}}" placeholder="请输入学号/教职工编号" />
    </view>
    <view class="h1"></view>
    <view class="block" style="width:100%;height:50px;"></view>
</view>
<view id="footer" style="display:block;bottom:0px;position:fixed;width:100%;height:50px;z-index:1000px;">
    <button bindtap="toAuth" style="width:100%;color:#fff;height:50px;background: #33CCFF;text-align: center;">
            认证
        </button>
</view>

