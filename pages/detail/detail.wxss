/* 评价 */

.count_down {
    width: 100%;
    border-top: 1px solid #f7f7f7;
    border-bottom: 1px solid #f7f7f7;
}

.count_down {
    padding-top: 0px;
    float: left;
    width: 23%;
}

.count_down .left img {
    display: block;
    width: 60px;
    height: 60px;
    border-radius: 40px;
}

.count_down .left {
    float: left;
    width: 20%;
    padding-top: 0px !important;
    padding-bottom: 0px !important;
}

.center {
    padding-top: 12px !important;
}

.right {
    text-align: left !important;
    float: left;
    padding-top: 10px !important;
    width: 30%;
}

.price {
    font-weight: bold;
    margin-top: -10px !important;
}

.title {
    font-weight: bold !important;
}

.psh {
    height: 100%;
    width: 92%;
    margin-top: 10px;
    margin-left: 4%;
    margin-right: 4%;
    float: left;
    text-align: left;
    background-color: #fff;
}

.sp1_3, .sp2_3, .sp1_3_big, .sp1_2, .sp1 {
    margin-left: 0.75em;
    float: left;
}

.sp1 {
    margin-left: 0px;
}

