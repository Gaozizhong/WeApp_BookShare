.screen-box .active {
    color: red;
}

.screen-box .active::after {
    border: 5px solid transparent;
    border-top: 5px solid red;
    width: 0;
    height: 0;
    position: absolute;
    margin-left: 6px;
    margin-top: 10px;
    content: '';
}

